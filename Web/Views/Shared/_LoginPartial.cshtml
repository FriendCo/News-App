@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">سلام @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-danger">خروج</button>
            </form>
        </li>
    }
    else
    {
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">ثبت نام</a>
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">ورود</a>

    }
</ul>
